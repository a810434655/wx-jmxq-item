  #ff6f63 0%, 
  #ff4967 100%);
  text-align: center;
  line-height: 38rpx;
  color: #fff;
  font-size: 22rpx;
  font-weight: bold;
  padding: 0 20rpx;
}

.content-h3{
  margin-top: 20rpx;
  font-weight:400;
  font-size:24rpx;
  color:#fff;
  font-weight: 400;
  line-height: 36rpx;
  overflow: hidden;
}

.star-content{
  width: 100%;
  height: 1334rpx;
  background: #fff;
  position: relative;
  z-index: 10;
  border-top-left-radius:40rpx;
  border-top-right-radius: 40rpx;
}

.star-top{
  width: 100%;
  background: #fff;
  position: relative;
  top: -40rpx;
  border-top-left-radius:40rpx;
  border-top-right-radius: 40rpx;
  text-align: center;
  z-index: 20;
  line-height: 120rpx;
}


.star-focus{
  font-weight: bolder;
  font-size: 30rpx;
  color:#b0b0b9;
  font-Family: SourceHanSansCN-Bold;
  line-height: 120rpx;
}

.star-focus-false{
  font-weight: bold;
  font-size: 38rpx;
  color: #3a3951;
  line-height: 120rpx;
  font-Family: "SourceHanSansCN-Bold";
}

.star-flex{
  width: 100%;
  height: 100%;
}

.star-raido{
  padding:30rpx 40rpx;
}

.star-raido>view{
  background-image: linear-gradient(to right, 
  #7084ed 0%, 
  #774fe5 100%);
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 8rpx;
}

.star-dynamic-list{
  width: 100%;
  height: 200rpx;
}

.star-dynamic-list-left{
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  font-family: "SourceHanSansCN-Bold";
  font-size: 30rpx;
  font-weight: bold;
	line-Height: 200rpx;
	color: #3a3951;
}
.star-dynamic-list-right{
  width: 100%;
  height: 180rpx;
  background: #edeeff;
  border-radius: 10rpx;
  padding:20rpx 0rpx;
  
}

.star-dynamic-h1{
  padding: 0 20rpx;
  font-family: "SourceHanSansCN-Bold";
  font-size: 30rpx;
  font-weight: bold;
  color: #3a3951;
  overflow: hidden;
}

.star-dynamic-h2{
  font-Family: "SourceHanSansCN-Regular";
	font-size: 22rpx;
  color: #b0b0b9;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.star-dynamic-h3{
  font-size: 22rpx;
  color: #b0b0b9;
  padding: 0 20rpx;
