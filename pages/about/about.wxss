.bfix{
  padding-left: 40rpx;
}
.btn {
  margin: 0rpx;
  padding: 0rpx;
  background: none;
  border: none;  
}
.btn:after {
  border: none;
}
.cell {
  position:relative;
  overflow:hidden;
  margin: 20rpx 20rpx;
}
