/* pages/idea/idea.wxss */

.idea-content{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  background: #f4f6f9;
}
.idea-top{
  text-align: center;
  margin-top:40rpx;
  color: #79828e;
  font-size: 30rpx;
}
.idea-center-content{
  width: 100%;
  height: 340rpx;
  background: #fff;
  margin-top: 30rpx;
}
.idea-textarea{
  width: 90%;
  height: 100%;
  margin: 20rpx;
  padding: 20rpx;
}
.c-30{
  color: #b3bdc9;
  font-size: 30rpx;
}
.idea-button{
  width: 100%;
  height: 100rpx;
  margin-top: 50rpx;
}
.idea-butt{
  background: red;
  width: 80%;
  margin-left: 10%;
  height: 100%;
  border-radius: 44rpx;
  background-image: -webkit-linear-gradient(left, #ffe324, #ffbf00) !important;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-weight: bold;
}
