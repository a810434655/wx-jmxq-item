page{
  height: 100%;
  width: 100%;
}
.container{
  min-height:100vh;
  /* margin-bottom: 50rpx; */
  /* padding-bottom:  */
  background: #f2f2f5;
  display:flex;
  flex-direction: column;
}
.body{
  background: #f2f2f5;
  width: 100vw;
  height:auto;
  position: relative;
  padding-bottom:50rpx;
}
.proin{
  position: relative;
  height: 78rpx;
}
.search{
  width: 80%;
  height: 78rpx;
  border-radius:40rpx;
  background: #fff;
  position: absolute;
  top:-20px;
  left:10%;
}
.index-input{
  width: 80%;
  height: 78rpx;
  position: absolute;
  padding:0px 20px;
}
.index-icon{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right:20rpx;
  top: 10rpx;
}
.index-content{
  width: 90%;
  margin-left: 5%;
  min-height: 220rpx;
  background: #fff;
  padding:0rpx 0rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  
}
.index-key{
  height: 100%;
  padding: 0 40rpx;
}
.index-left{
  width: 20%;
  height: 100%;
  position: relative;
  text-align: center;
  float: left;
}
.index-image{
  width: 100rpx;
  height: 100rpx;
  border-top-left-radius:54rpx;
  border-top-right-radius:4rpx;
  border-bottom-left-radius:54rpx;
  border-bottom-right-radius:54rpx;
  border:4rpx solid #edeeff;
  position: relative;
  top:40rpx;
}
.index-div{
  width: 110rpx;
  font-size:24rpx;
  line-height: 38rpx;
  text-align: center;
  color: #fff;
  height: 38rpx;
  border-radius: 4rpx;
  background: -webkit-linear-gradient(left, rgb(112,132,237) , rgb(119,79,229)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, rgb(112,132,237) , rgb(119,79,229)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(left, rgb(112,132,237) , rgb(119,79,229)); /* Firefox 3.6 - 15 */
  background: linear-gradient(left, rgb(112,132,237) , rgb(119,79,229)); /* 标准的语法 */
  position: relative;
  z-index: 999;
  top:10rpx;
  left:5rpx;
}
.index-right{
  width: 70%;
  margin-left: 5%;
  height: 100%;
  float: left;
}
.index-top{
  margin-top: 30rpx;
  font-size: 32rpx;
  font-family: 'SourceHanSansCN-Bold';
  color: #3a3951;
  font-weight: bold;
  overflow: hidden;
}
.index-text{
  width: 100%;
  margin-top: 10rpx;
  font-size: 22rpx;
  height:38rpx;
  overflow: hidden;
}
.index-base{
  background: -webkit-linear-gradient(left, rgb(255,174,131) , rgb(255,134,122)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, rgb(255,174,131) , rgb(255,134,122)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(left, rgb(255,174,131) , rgb(255,134,122)); /* Firefox 3.6 - 15 */
  background: linear-gradient(left, rgb(255,174,131) , rgb(255,134,122)); /* 标准的语法 */
  width: 100rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius:4rpx;
  float:left;
  padding:0 5rpx;
}
.index-green{
  background: -webkit-linear-gradient(left, rgb(99,204,144) , rgb(15,194,169)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(left, rgb(99,204,144) , rgb(15,194,169)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(left, rgb(99,204,144) , rgb(15,194,169)); /* Firefox 3.6 - 15 */
  background: linear-gradient(left, rgb(99,204,144) , rgb(15,194,169)); /* 标准的语法 */
  width: 100rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  color: #fff;
  border-radius:4rpx;
  float:left;
  margin-left: 20rpx;
  padding:0 10rpx;
  font-size: 22rpx;
}
.index-info{
  width: 100%;
  font-size: 24rpx;
  color:#616174;
  opacity: 0.6;
  margin-top: 10rpx;
  height:65rpx;
  overflow:hidden;
}
.index-quexing{
  width: 100%;
  height: 500rpx;
  margin-top: 80rpx;
  text-align: center;
}
.index-quexing>image{
  width: 230rpx;
  height: 330rpx;
}
.index-te{
  font-size: 30rpx;
  color: #b0b0b9;
  margin-top: 40rpx;
}